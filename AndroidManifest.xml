<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sneezer.parkrio"
    android:versionCode="20"
    android:versionName="${project.version}" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity android:name="com.sneezer.parkrio.LoginActivity" >
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
        </activity>
        
        <activity android:name="com.sneezer.parkrio.CompareActivity"
            android:label="@string/title_activity_compare" >
        </activity>
        
        <activity android:name="com.sneezer.parkrio.ChartActivity_Monthly"
            android:label="@string/title_activity_chart" >
        </activity>

        <activity android:name="com.sneezer.parkrio.ChartActivity_Yearly"
            android:label="@string/title_activity_chart" >
        </activity>
        
        </application>

</manifest>